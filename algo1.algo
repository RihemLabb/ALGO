   IF (sentc[c]=" ") THEN
       w:=w+1 ;
   END_IF

  IF (sentc[c] in ["a","e","u","i","o","y"]) THEN

   v:= v +1 ;

   END_IF

   c := c+1 ;

UNTIL (sentc[c]=".")

